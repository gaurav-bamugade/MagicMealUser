<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:padding="15dp"
            tools:context=".FeedbackActivity">

        <LinearLayout
                android:id="@+id/feedback_linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <EditText
                        android:id="@+id/feedback_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:hint="Name*"
                        android:inputType="textPersonName"
                    android:background="@drawable/squarroundtra"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />



                <EditText
                        android:id="@+id/feedback_email_id"
                        android:layout_width="match_parent"
                    android:layout_height="60sp"
                        android:hint="Email ID*"
                    android:background="@drawable/squarroundtra"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                    android:layout_marginTop="20sp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />




                <EditText
                        android:id="@+id/feedback_mobile_no"
                        android:layout_width="match_parent"
                    android:layout_height="60sp"
                        android:hint="Mobile No.*"
                    android:background="@drawable/squarroundtra"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:maxLength="10"
                    android:layout_marginTop="20sp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />




                <EditText
                        android:id="@+id/feedback_message"
                        android:layout_width="match_parent"
                    android:layout_height="60sp"
                        android:autoLink="all"
                        android:hint="Message*"
                    android:background="@drawable/squarroundtra"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="5"
                        android:maxLines="5"
                        android:minLines="1"
                        android:paddingLeft="10dp"
                    android:layout_marginTop="20sp"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:paddingLeft="10dp"
                    android:text="Provide Ratings for our App"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <RatingBar
                    android:id="@+id/feedback_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:stepSize="0.5" />

            <ProgressBar
                    android:id="@+id/feedback_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible" />

        </LinearLayout>

        <Button
                android:id="@+id/feedback_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedback_linear_layout_1"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_trans"
                android:fontFamily="serif-monospace"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
