<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PhoneAuthenActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_twotone_phone_android"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/inputphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Phone Number"
            android:textAlignment="center"
            android:textColor="#000"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter Your Phone Number to Continue"
            android:textAlignment="center"
            >

        </TextView>

        <EditText
            android:id="@+id/phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:hint="+92XXXXXXXX"
            android:textAlignment="center"
            android:textColor="#000"
            android:padding="10dp"
            android:textColorHint="#c5c5c5"
            >
        </EditText>
        <Button
            android:id="@+id/phoneContinueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Continue"
            >
        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Verification Code"
            android:textAlignment="center"
            android:textColor="#000"
            >

        </TextView>
        <TextView
            android:id="@+id/codeSendDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter The Verification Code "
            android:textAlignment="center"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/inp1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="2dp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>
            <EditText
                android:id="@+id/inp2"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="2dp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>
            <EditText
                android:id="@+id/inp3"
                android:layout_width="40sp"
                android:layout_margin="2dp"
                android:layout_height="40sp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>
            <EditText
                android:id="@+id/inp4"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="2dp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>
            <EditText
                android:id="@+id/inp5"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="2dp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>
            <EditText
                android:id="@+id/inp6"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="2dp"
                android:background="@drawable/box_bg"
                android:textSize="20sp"
                android:textAlignment="center"
                android:hint="0"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textStyle="bold"
                >
            </EditText>



        </LinearLayout>

        <!-- <EditText
             android:id="@+id/codeVerification"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:background="#fff"
             android:hint="+92XXXXXXXX"
             android:textAlignment="center"
             android:textColor="#000"
             android:padding="10dp"
             android:textColorHint="#c5c5c5"
             >

         </EditText>-->
        <TextView
            android:id="@+id/resendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didnt Receive OTP? Resend Code"
            >

        </TextView>
        <Button
            android:id="@+id/codeSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Submit"
            >

        </Button>
    </LinearLayout>

</LinearLayout>