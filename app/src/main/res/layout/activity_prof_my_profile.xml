<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_gravity="center"
            android:orientation="vertical"
            tools:context=".ProfMyProfileActivity">

        <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <EditText
                    android:id="@+id/edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:hint="Edit Name*"
                    android:background="@drawable/squarroundtra"
                    android:drawableLeft="@drawable/ic_aboutus"
                    android:drawablePadding="15dp"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    />



                <EditText
                    android:id="@+id/edit_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:hint="Edit Uername*"
                    android:layout_marginTop="20sp"
                    android:drawableLeft="@drawable/ic_username"
                    android:drawablePadding="15dp"
                    android:background="@drawable/squarroundtra"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    />




                <EditText
                        android:id="@+id/edit_profile_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:hint="Mobile Number*"
                        android:layout_marginTop="20sp"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="15dp"
                    android:background="@drawable/squarroundtra"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_calendar"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/ic_baseline_perm_contact_calendar_24" />


                <EditText
                    android:id="@+id/edit_profile_dob"
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:clickable="true"
                    android:layout_marginTop="20sp"

                    android:background="@drawable/squarroundtra"
                    android:drawablePadding="15dp"
                    android:layout_toRightOf="@id/image_view_calendar"
                    android:enabled="false"
                    android:hint="DOB*"

                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>

            <Button
                    android:id="@+id/btn_profile_update"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Update"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_trans"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="serif-monospace"
                    />

        </LinearLayout>

    </LinearLayout>

</ScrollView>